{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "es2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDir": ".",
    "removeComments": true,
    "types": ["node", "vite/client"],
    "lib": ["ESNext", "DOM"], // vue/vetur needs this
    "skipLibCheck": true,
    "paths": {
      "@mrx/*": ["@core/*", "@plugin/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules"],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "strict": false,
      "allowJs": true,
      "module": "commonjs",
      "esModuleInterop": true,
      "skipLibCheck": true
    }
  }
}
